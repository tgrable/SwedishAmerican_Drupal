<div class="card-search-form">
    <h2>Location Search</h2>
    <select id="location-search-form-name" name="name_1">
        <option value="location">Location Name</option>
        {% for key, location in locations %}
            <option value="{{ loop.index }}">{{ location }}</option>
        {% endfor %}
    </select>
    <input id="location-search-form-city" type="text" name="city" placeholder="City" />
    <button class="button js-form-submit form-submit btn-info btn location-search-form-button" type="submit" id="edit-submit--location" name="op" value="Apply">Search</button>
</div>